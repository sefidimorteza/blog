@page
@model Myblog.Pages.Auth.LoginModel;
@{
    Layout = "Shared/_AuthLayout";
    ViewData["Title"] = "ورود به سایت";
}
<form method="post">
    <h1>@ViewData["Title"]</h1>
    <div>
        <input type="text" asp-for="UserName" placeholder="نام کاربری" required id="username" />
        <span asp-validation-for="UserName" class="d-flex flex-column "></span>

    </div>
    <div>
        <input type="password" asp-for="Password" placeholder="کلمه عبور" required="" id="password" />
        <span asp-validation-for="Password" class="d-flex flex-column "></span>
    </div>
    <div>
        <input type="submit" value="ورود" />
        <a asp-page="Register">ثبت نام</a>
    </div>
</form>
<style>
    span {
        color: red;
    }
</style>