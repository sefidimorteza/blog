@{    ViewData["title"] = "افزودن دسته بندی";}@model Myblog.Areas.Admin.Models.Categories.CreateCategoryViewModel<section class="content-header">    <h1>        @ViewData["title"]    </h1>    <ol class="breadcrumb">        <li><a asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="fa fa-dashboard"></i> خانه</a></li>        <li><a asp-area="Admin" asp-controller="Category" asp-action="Index"> دسته بندی ها</a></li>        <li><a>@ViewData["title"]</a></li>    </ol></section><section class="content">    <form class="box box-danger" method="post" asp-area="Admin" asp-controller="Category" asp-action="Add">        <div class="box-body row">            <div class="col-md-6">                @Html.EditorFor(m => m.Title)                <span asp-validation-for="Title" class="text-danger"></span>            </div>            <div class="col-md-6">                @Html.EditorFor(m => m.Slug)                <span asp-validation-for="Slug" class="text-danger"></span>            </div>            <div class="col-md-6">                @Html.EditorFor(m => m.MetaTag)            </div>            <div class="col-md-6">                @Html.EditorFor(m => m.MetaDescription)            </div>        </div>        <div class="box-footer">            <button type="submit" class="btn btn-outline-primary">ثبت اطلاعات</button>        </div>    </form></section>